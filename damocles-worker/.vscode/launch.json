    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'damocles-worker'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=damocles-worker",
                    "--package=damocles-worker"
                ],
                "filter": {
                    "name": "damocles-worker",
                    "kind": "bin"
                }
            },
            "args": ["daemon", "-c", "/root/new/worker-supra-config.toml"],
            "cwd": "${workspaceFolder}"
        },
    ]
}
